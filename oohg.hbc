# add app folder to search for additional include files
incpaths=${hb_curdir}

# app + oohg resources
#sources=${hb_curdir}_temp.o

# gui mode
gt=gtgui

# core lib
libs=oohg

# printing libs
libs=hbprinter miniprint bostaurus

# harbour contribs
{!xhb}libs=hbct.hbc hbmisc.hbc hbtip.hbc hbziparc.hbc hbmzip.hbc minizip.hbc hbwin.hbc xhb.hbc hbzebra.hbc hbhpdf.hbc png.hbc

#xharbour contribs
{xhb}libs=hbct hbmisc hbtip hbziparc hbmzip minizip hbwin xhb hbzebra hbhpdf libhpdf png

# optional libs for HB 3.0
#libs=socket mysqldll dll hbmysql rddleto

# system
libs=msvfw32 vfw32
